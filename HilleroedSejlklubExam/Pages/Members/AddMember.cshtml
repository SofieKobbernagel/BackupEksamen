@page
@model HilleroedSejlklubExam.Pages.Members.AddMemberModel
@{
}
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        <label asp-for="Member.FirstName" class="control-label">Fornavn</label>
        <input asp-for="Member.FirstName" class="form-control" />
        <span asp-validation-for="Member.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.LastName" class="control-label">Efternavn</label>
        <input asp-for="Member.LastName" class="form-control" />
        <span asp-validation-for="Member.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Email" class="control-label">Email</label>
        <input asp-for="Member.Email" class="form-control" />
        <span asp-validation-for="Member.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Birthday" class="control-label">Fødselsdato</label>
        <input asp-for="Member.Birthday" type="date" class="form-control" />
        <span asp-validation-for="Member.Birthday" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Member.Phone" class="control-label">Tlf.</label>
        <input asp-for="Member.Phone" class="form-control" />
        <span asp-validation-for="Member.Phone" class="text-danger"></span>
    </div>


    <label asp-for="@Model.Photo" class="control-label"></label>
    <div class="custom-file">
        <input asp-for="@Model.Photo" class="custom-file-input form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Tilføj Klubmedlem" class="btn btn-primary" />
    </div>
</form>